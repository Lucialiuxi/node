{
  "name": "chatroom",
  "version": "1.0.0",
  "description": "Minimalist multiroom chat server",
  "main": "server.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "start": "nodemon src/server.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "mime": "^2.5.2",
    "socket.io": "^4.2.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.13"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": ["src/"],
    "ignore": ["node_modules/*"],
    "script": "server.js",
    "options": {
      "extensions": ["js", "jsx", "html"],
      "exec": "node"
    }
  }
}
